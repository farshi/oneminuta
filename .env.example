# Telegram Configuration
TELEGRAM_API_ID=your_api_id_here
TELEGRAM_API_HASH=your_api_hash_here
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_PHONE=+66xxxxxxxxx

# Storage Configuration
STORAGE_PATH=./storage
BACKUP_PATH=./backups

# Service Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Bot Configuration
BOT_WEBHOOK_URL=https://your-domain.com/webhook
BOT_WEBHOOK_PATH=/webhook
BOT_MAX_CONNECTIONS=40

# Collector Configuration
COLLECTOR_SESSION_NAME=collector_session
COLLECTOR_CHANNELS_FILE=./config/channels.yaml

# Notifier Configuration
NOTIFIER_BATCH_SIZE=50
NOTIFIER_INTERVAL_SECONDS=3600
NOTIFIER_MAX_RETRIES=3

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/oneminuta.log
LOG_ROTATION=10 MB
LOG_RETENTION=30 days

# Development
DEBUG=false
ENVIRONMENT=production